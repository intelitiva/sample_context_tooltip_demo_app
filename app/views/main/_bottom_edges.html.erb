<div id="bottom-left-container" class="box">Top Left Tooltip container</div>
<div id="bottom-right-container" class="box">Top Right Tooltip container</div>

<div id="edge-tooltip" class="tooltip">This is a tooltip displayed at the edge of the page.</div>

<%= context_tooltip("#edge-tooltip", :contextElement => "'top-left-container'", :position => "'bottom-right'", :horizontalOffset => 10, :verticalOffset => 10) %>
<%= context_tooltip("#edge-tooltip", :contextElement => "'top-right-container'", :position => "'bottom-left'", :horizontalOffset => -10, :verticalOffset => 10) %>
<%= context_tooltip("#edge-tooltip", :contextElement => "'bottom-left-container'", :position => "'top-right'", :horizontalOffset => 10, :verticalOffset => -10) %>
<%= context_tooltip("#edge-tooltip", :contextElement => "'bottom-right-container'", :position => "'top-left'", :horizontalOffset => -10, :verticalOffset => -10) %>